<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <uk.co.jaspalsvoice.jv.views.EditableCardView
            android:elevation="@dimen/elevation"
            android:id="@+id/pd_name"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_small"/>

        <uk.co.jaspalsvoice.jv.views.EditableCardView
            android:elevation="@dimen/elevation"
            android:id="@+id/pd_name_to_be_called"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_small"/>

        <uk.co.jaspalsvoice.jv.views.EditableCardView
            android:elevation="@dimen/elevation"
            android:id="@+id/pd_live_with"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_small"/>

        <uk.co.jaspalsvoice.jv.views.EditableCardView
            android:elevation="@dimen/elevation"
            android:id="@+id/pd_email"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_small"/>

        <uk.co.jaspalsvoice.jv.views.EditableCardView
            android:elevation="@dimen/elevation"
            android:id="@+id/pd_dob"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_small"/>

        <uk.co.jaspalsvoice.jv.views.EditableCardView
            android:elevation="@dimen/elevation"
            android:id="@+id/pd_main_carer"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_small"/>

        <uk.co.jaspalsvoice.jv.views.EditableCardView
            android:elevation="@dimen/elevation"
            android:id="@+id/pd_carer_tel"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_small"/>

        <uk.co.jaspalsvoice.jv.views.YesNoCardView
            android:elevation="@dimen/elevation"
            android:id="@+id/pd_translator_needed"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_small"/>

    </LinearLayout>
</ScrollView>