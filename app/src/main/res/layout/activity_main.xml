        <!--android:layout_weight="1"-->
        <!--android:layout_width="0dp"-->
        <!--android:paddingBottom="@dimen/margin_small"-->
        <!--android:paddingLeft="@dimen/margin_normal"-->
        <!--android:paddingTop="@dimen/margin_small"-->
        <!--android:text="@string/delete_letter"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textSize="@dimen/text_small_size"/>-->

    </LinearLayout>

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/one"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_sym_1"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/two"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_abc_2"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/three"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_def_3"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/four"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_ghi_4"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/five"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_jkl_5"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/six"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_mno_6"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/seven"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_pqrs_7"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/eight"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_tuv_8"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/nine"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_wxyz_9"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/star"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_letter_case"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:background="@drawable/key_selector"
                android:gravity="center"
                android:id="@+id/zero"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/key_space_0"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <FrameLayout
                android:background="@drawable/clear_button_selector"
                android:clickable="true"
                android:id="@+id/hash"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_xx_small"
                android:layout_weight="1"
                android:layout_width="0dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/button_padding"
                    android:paddingTop="@dimen/button_padding"
                    android:scaleType="fitCenter"
                    android:src="@drawable/flip"/>
            </FrameLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>
